{
  "name": "serial-port-http-server",
  "version": "1.0.0",
  "description": "Http server for local serial ports.",
  "main": "index.js",
  "scripts": {
    "format:source": "npx prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "clean": "npx ts-node src\\serial-port\\gulpfile.ts\\clean.ts",
    "build": "tsc --project src\\serial-port\\front-end\\tsconfig.json",
    "server": "npx ts-node src\\serial-port\\front-end\\server\\server.ts",
    "watch": "tsc --project src\\serial-port\\front-end\\tsconfig.json --watch",
    "moveCmpp": "npx ts-node .\\src\\serial-port\\cmpp\\temp\\moveAxisTo.ts",
    "updateDependencyGraph1": "npx dependency-cruiser --include-only '^src' --output-type dot src | dot -T svg > dependencygraph1All.svg",
    "updateDependencyGraph2":  "npx ts_dependency_graph --start ./src/software/main3.ts  | dot -T svg > dependencygraph2Main3.svg",
    "updateDependencyGraph2Main2":  "npx ts_dependency_graph --start ./src/software/main2.ts  | dot -T svg > dependencygraph2Main2.svg",
    "dep1": "npm run updateDependencyGraph1",
    "dep2": "npm run updateDependencyGraph2",
    "dep3": "npm run updateDependencyGraph2Main2",
    "dep": "npm run dep1 && npm run dep2 && npm run dep3"
  },
  "author": "fvilante",
  "license": "ISC",
  "devDependencies": {
    "@types/serialport": "^8.0.1",
    "jest": "^26.4.2",
    "ts-jest": "^26.4.0",
    "typescript": "^4.2.3",
    "dependency-cruiser": "^10.0.4"
  },
  "dependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.14.31",
    "@types/terminal-kit": "^1.28.2",
    "control-terminal": "^1.0.0-alpha.0",
    "serialport": "^9.0.1",
    "terminal-kit": "^2.0.3",
    "ts-node": "^9.0.0"
  }
}
